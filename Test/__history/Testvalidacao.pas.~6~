procedure TestTQualTriangulo.SetUp;
begin
  FQualTriangulo := TQualTriangulo.Create;
end;

procedure TestTQualTriangulo.TearDown;
begin
  FQualTriangulo.Free;
  FQualTriangulo := nil;
