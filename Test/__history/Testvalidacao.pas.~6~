procedure TestTQualTriangulo.TestValidaTrianguloEscaleno;
var
  ReturnValue: string;
  LadoC: Integer;
  LadoB: Integer;
  ladoA: Integer;
begin
  LadoC := 8;
  LadoB := 5;
  ladoA := 10;
  ReturnValue := FQualTriangulo.ValidaTrianguloEscaleno(ladoA, LadoB, LadoC);
  Check(ReturnValue = 'Triangulo Escaleno');
end;

